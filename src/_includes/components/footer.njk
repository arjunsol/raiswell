{# Footer component #}
<footer class="footer">
    <div class="footer__container container">
        <div class="footer__grid">
            <div class="footer__column footer__column--brand">
                <h3 class="footer__title">{{ site.name }}</h3>
                <p class="footer__description">{{ site.tagline }}</p>
                <div class="footer__social" data-social-links></div>
            </div>
            <div class="footer__column">
                <h4 class="footer__heading">Quick Links</h4>
                <ul class="footer__links">
                    {% for item in site.footerLinks %}
                    <li><a href="{{ item.url }}">{{ item.text }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <div class="footer__column">
                <h4 class="footer__heading">Follow Us</h4>
                <div class="footer__social-links" data-social-links></div>
            </div>
            <div class="footer__column">
                <h4 class="footer__heading">Contact Info</h4>
                <div class="footer__contact">
                    <p><strong>Phone:</strong> <a href="tel:{{ site.phone }}" data-phone>{{ site.phoneDisplay }}</a></p>
                    <p><strong>Email:</strong> <a href="mailto:{{ site.email }}" data-email>{{ site.email }}</a></p>
                    <p data-address></p>
                </div>
            </div>
        </div>
        <div class="footer__bottom">
            <p data-copyright>&copy; {{ "" | year }} {{ site.name }}. All rights reserved.</p>
        </div>
    </div>
</footer>
